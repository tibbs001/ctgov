<div class="container-fluid">
<script>
$(document).ready(function(){
    $('#sortTable').dataTable();
});
</script>

<div class='table-responsive'>
<table id="sortTable" class='table table-striped table-condensed table-hover' width='100%'>
  <thead>
    <tr>
      <th>status</th>
      <th>conditions</th>
      <th>title</th>
      <th>started</th>
      <th>lead sponsor</th>
			<th>actions</th>
	</tr>
  </thead>
  <colgroup>
    <col class="col-md-1">
    <col class="col-md-4">
    <col class="col-md-6">
    <col class="col-md-4">
    <col class="col-md-4">
    <col class="col-md-1">
  </colgroup>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td><%= study.overall_status %></td>
        <td><%= study.condition_names %></td>
        <td><%= study.brief_title %></td>
        <td><%= study.start_date %></td>
        <td><%= study.lead_sponsor.try(:agency) %></td>
				<td class='duke-btn'>
					<%= link_to 'categorize',study_path(study), :class => "btn btn-default btn-mini" %>
			  </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

